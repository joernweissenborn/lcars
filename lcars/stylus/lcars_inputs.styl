// LCARS - Inputs

// Text based inputs first

input.{prefix}text-input
  height 1rem
  padding 0
  margin 0
  border none
  background-color transparent
  color white
  font-size 1rem

textarea.lcars-text-box, textarea.lcars-text-input
  font-size 1em
  font-family primary-font-family
  text-align  justify
  padding  0
  padding-right  1em
  margin 0
  border-top none
  border-bottom none
  border-left none
  border-right .2rem solid dimgray
  background-color transparent
  color white
  /* just the resizer now */
  background  url("data:image/svg+xml;charset=utf-8;base64,")  no-repeat rgba(0,0,0,0) 99.9% 100%
  background-size  16px

// Range inputs (a.k.a. "sliders")
// credit for a nice pure CSS solution:  https://stackoverflow.com/questions/18389224/how-to-style-html5-range-input-to-have-different-color-before-and-after-slider
/*
Chrome: Hide the overflow from input[range], and fill all the space left to thumb with shadow color.
IE: no need to reinvent the wheel: ::-ms-fill-lower
Firefox no need to reinvent the wheel: ::-moz-range-progress
*/

////Chrome
@media screen and (-webkit-min-device-pixel-ratio:0)
  input[type='range']
    overflow hidden
    width 80px
    -webkit-appearance none
    background-color transparent
    
  input[type='range']::-webkit-slider-runnable-track 
    height 1em
    -webkit-appearance none
    color #CCAA33
    margin-top -1px
    
  input[type='range']::-webkit-slider-thumb 
    width 1em
    -webkit-appearance none
    height 1em
    cursor ew-resize
    background #CCAA33
    box-shadow -80px 0 0 80px #CCAA33
    

////Firefox
input[type="range"]::-moz-range-progress
  background-color #43e5f7

input[type="range"]::-moz-range-track
  background-color #9a905d

////IE
input[type="range"]::-ms-fill-lower
  background-color #43e5f7

input[type="range"]::-ms-fill-upper
  background-color #9a905d


